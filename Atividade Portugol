programa {
	funcao inicio() {
	
	    // Unidade Curricular: [Desenvolvimento de Sistemas de Informação]
	    // Professor: [Ivson Estevão Soares]
	    // Autores: [Iuri Torres, Lucas Mendonça]
	    // Data de criação: [30/04/2022]
	    
	    // Tipos de dados das variáveis
	    cadeia nome, profissao, genero, email, perfilGithub
	    inteiro dataAtual, dataNascimento, Idade, IdadeMentira, idadex50, porcentagemidade, idade2022, idade2022menos45
	    real resultadodiv60
	    
	    // Coleta de dados
		escreva("Boa Tarde, este código foi desenvolvido por Iuri Torres e Lucas Mendonça") // Exibe os desenvolvedores do código
		escreva("\nTurma de Aprendizagem em desenvolvimento de Software - UC 2 \n")         // Exibe a turma dos desenvolvedores
		
		escreva("\nDigite o seu nome ou nome social: ")                                     // Pergunta o nome
		leia(nome)
		
		escreva("\nDigite Ano de nascimento no formato de ddmmaaaa: ")                      // Pergunta a data de nascimento
		leia(dataNascimento)
		
		escreva("\nDigite sua profissão: ")                                                 // Pergunta a profissão
		leia(profissao)
		
		escreva("\nDigite seu gênero: ")                                                    // Pergunta o gênero
		leia(genero)
		
		escreva("\nDigite seu e-mail: ")                                                    // Pergunta o e-mail
		leia(email)
		
		escreva("\nDigite o link do seu github: ")                                          // Pergunta o link do github
		leia(perfilGithub)
		
		// Cálculos
		dataAtual = 02052022                                    // Data Atual
		Idade = dataNascimento - dataAtual                      // Deveria calcular a idade :/
		IdadeMentira = 20                                       // Idade supositória
		idadex50 = IdadeMentira * 50                            // Cálculo da multiplicação
		resultadodiv60 = idadex50 / 60                          // Cálculo do resultado anterior dividido por 60
		porcentagemidade = IdadeMentira * 0.25                  // Cálculo da porcentagem da idade
		idade2022 = IdadeMentira + 2022                         // Cálculo da idade + 2022
		idade2022menos45 = idade2022 - 45                       // Cálculo do resultado anterior - 45
		
		
		// Exebição dos resultados
		
		escreva("\n============================\n")              // Divisória
		
		escreva("\nNome: ", nome, "\n")
		
		escreva("\n============================\n")              // Divisória
		
		escreva("\nIdade: ", IdadeMentira)                       // Exibe a idade
		escreva("\nSua Idade * 50 = ", idadex50)                 // Exibe a idade vezes 50
		escreva("\nO resultado / 60 = ", resultadodiv60)         // Exibe o resultado dividido por 60
		escreva("\n25% da sua idade = ", porcentagemidade)       // Exibe 25% da idade
		escreva("\nSua Idade + 2022 = ", idade2022)              // Exibe o resultado da idade + 2022
		escreva("\nO resultado - 45 = ", idade2022menos45, "\n") // Exibe o resultado da ultima conta menos 45
		
		escreva("\n============================\n")              // Divisória
		
		escreva("\nProfissão: ", profissao)                      // Exibe a profissão
		escreva("\nGênero: ", genero)                            // Exibe o gênero
		escreva("\nE-mail: ", email)                             // Exibe o e-mail
		escreva("\nPerfil Github: ", perfilGithub, "\n")         // Exibe o link do GitHub
		
		escreva("\n============================\n")              // Divisória
		
	}
}
